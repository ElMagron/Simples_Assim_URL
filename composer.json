{
    "name": "andre/simples_assim_url",
    "description": "Encurtador de links. Reduzimos URLs longas porquê... pra que tudo isso?",
    "type": "project",
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "serve": "php -S localhost:8080 -t .",
        "lint": "find src/ -name '*.php' -print0 | xargs -0 -n1 php -l"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/" 
        }
    },
    "authors": [
        {
            "name": "André Almagro"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.6",
        "phpunit/phpunit": "^11.5"
    }
}
